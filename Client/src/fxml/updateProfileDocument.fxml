<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="350.0" prefWidth="440.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" >
    <children>
        <VBox alignment="CENTER" layoutX="7.0" layoutY="5.0" prefHeight="340.0" prefWidth="427.0" spacing="15" style="-fx-background-color: #f0f8ff; -fx-padding: 20px; -fx-border-color: #add8e6; -fx-border-radius: 10px; -fx-background-radius: 10px;">
            <AnchorPane>
                <children>
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #007acc;" text="🔒 Update Your Password" />
                </children>
            </AnchorPane>
            <AnchorPane>
                <children>
                    <PasswordField fx:id="oldPasswordField" minWidth="-Infinity" prefHeight="35.0" prefWidth="250.0" promptText="Enter old password" style="-fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #007acc; -fx-border-radius: 5px;" />
                </children>
            </AnchorPane>
            <AnchorPane>
                <children>
                    <PasswordField fx:id="newPasswordField" minWidth="-Infinity" prefHeight="35.0" prefWidth="250.0" promptText="Enter new password" style="-fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #007acc; -fx-border-radius: 5px;" />
                </children>
            </AnchorPane>
            <AnchorPane>
                <children>
                    <PasswordField fx:id="retypePasswordField" minWidth="-Infinity" prefHeight="35.0" prefWidth="250.0" promptText="Retype new password" style="-fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #007acc; -fx-border-radius: 5px;" />
                </children>
            </AnchorPane>
            <HBox alignment="CENTER" spacing="15">
                <AnchorPane>
                    <children>
                        <Button  onAction="#handleChangeButton" fx:id="changeButton" style="-fx-background-color: #007acc; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-font-size: 14px; -fx-border-radius: 5px;" text="✔ Change" />
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <Button onAction="#handleCancelAction" fx:id="cancelButton" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-padding: 8px 16px; -fx-font-size: 14px; -fx-border-radius: 5px;" text="❌ Cancel" />
                    </children>
                </AnchorPane>
            </HBox>
        </VBox>
    </children>
</AnchorPane>